#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Temporarily disable pre-commit hook to avoid issues with special characters in file path
# Run lint-staged if path doesn't have special characters
if echo "$(pwd)" | grep -q '[^\x00-\x7F]'; then
  echo "⚠️  Skipping lint-staged due to special characters in path"
  echo "Path: $(pwd)"
  exit 0
fi

npx lint-staged
